<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Use solid color background for instant loading -->
        <item name="android:windowBackground">#003A3C</item>
        <!-- Keep status bar transparent -->
        <item name="android:windowFullscreen">true</item>
        <!-- CRITICAL: Disable app icon zoom animation -->
        <item name="android:windowDisablePreview">true</item>
        <!-- Prevent any window animations -->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Additional properties to prevent icon zoom -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Ensure no transition animations -->
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

</resources>
